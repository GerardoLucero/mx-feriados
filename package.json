{
  "name": "mx-feriados",
  "version": "1.0.0",
  "type": "module",
  "description": "Días festivos oficiales mexicanos con cálculos automáticos",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "data", "README.md", "LICENSE"],
  "scripts": {
    "build": "microbundle --no-compress",
    "build:prod": "microbundle",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build:prod"
  },
  "keywords": ["mexico", "mexican", "mx"],
  "author": {
    "name": "Gerardo Lucero",
    "email": "tu-email@ejemplo.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GerardoLucero/mx-feriados.git"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^8.57.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "microbundle": "^0.15.1"
  },
  "dependencies": {
    "dayjs": "^1.11.10"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": { "^.+\.js$": "babel-jest" },
    "collectCoverageFrom": ["src/**/*.js", "!src/**/*.test.js"],
    "coverageThreshold": {
      "global": { "branches": 80, "functions": 85, "lines": 85, "statements": 85 }
    }
  }
}
